{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "NPF script",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#variables"
        },
        {
            "include": "source.bash"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.npf",
                    "match": "^%\\w+"
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.name.npf",
                    "match": "@\\w+"
                }
            ]
        }
    },
    "scopeName": "source.npf"
}